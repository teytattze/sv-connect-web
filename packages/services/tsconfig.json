{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", ".turbo"]
}
